<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearlayoutrequest">

    <Button android:id="@+id/btn_permission"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Permission"
        android:background="@color/ColorPrimary"
        android:layout_marginTop="110dp"
        android:textColor="@android:color/white"/>


    <Button android:id="@+id/btn_postquery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Post A Query"
        android:background="@color/ColorPrimary"
        android:layout_marginTop="40dp"
        android:textColor="@android:color/white"/>

    <Button android:id="@+id/btn_requestpermission"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Request For Document"
        android:background="@color/ColorPrimary"
        android:layout_marginTop="40dp"
        android:textColor="@android:color/white"/>

    <Button android:id="@+id/btn_complaint"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Complaint"
        android:background="@color/ColorPrimary"
        android:layout_marginTop="40dp"
        android:textColor="@android:color/white"/>




</LinearLayout>